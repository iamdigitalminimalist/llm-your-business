{
  "name": "llm-your-business",
  "module": "index.ts",
  "scripts": {
    "dev": "concurrently --names \"CLIENT-API,CLIENT,SCHEDULER,SUGGESTIONS\" --prefix-colors \"blue,green,yellow,magenta\" \"bun run dev:client-api\" \"bun run dev:client\" \"bun run docker:scheduler\" \"bun run docker:suggestions\"",
    "docker": "docker compose up --build",
    "dev:client-api": "cd services/client-api && bun run dev",
    "dev:client": "cd services/client && bun run dev",
    "docker:scheduler": "docker compose up --build scheduler kafka zookeeper",
    "docker:suggestions": "docker compose up --build suggestions",
    "format": "prettier --write .",
    "prepare": "husky",
    "db:generate": "cd services/db && bun run db:generate",
    "db:push": "cd services/db && bun run db:push",
    "db:studio": "cd services/db && bun run db:studio",
    "db:migrate": "cd services/db && bun run db:migrate",
    "db:reset": "cd services/db && bun run db:reset"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "private": true,
  "type": "module",
  "workspaces": [
    "services/*"
  ]
}

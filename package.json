{
  "name": "llm-your-business",
  "module": "index.ts",
  "scripts": {
    "dev": "concurrently --names \"SERVER,CLIENT\" --prefix-colors \"blue,green\" \"bun run dev:server\" \"bun run dev:client\"",
    "dev:server": "cd packages/server && bun run dev",
    "dev:client": "cd packages/client && bun run dev",
    "format": "prettier --write .",
    "prepare": "husky",
    "db:generate": "cd packages/db && bun run db:generate",
    "db:push": "cd packages/db && bun run db:push",
    "db:studio": "cd packages/db && bun run db:studio",
    "db:migrate": "cd packages/db && bun run db:migrate",
    "db:reset": "cd packages/db && bun run db:reset"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ]
}

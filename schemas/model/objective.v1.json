{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Objective",
  "type": "object",
  "required": [
    "public_id",
    "title",
    "llm_models",
    "objective_type",
    "run_schedule",
    "start_date",
    "partner_id",
    "product_id",
    "is_active"
  ],
  "properties": {
    "public_id": { "type": "string" },
    "title": { "type": "string", "minLength": 1 },
    "llm_models": {
      "type": "array",
      "items": { "type": "string", "enum": ["CHAT_GPT5", "CLAUDE_3_5", "GEMINI_2", "LLAMA_4"] },
      "minItems": 1
    },
    "objective_type": {
      "type": "string",
      "enum": ["top_5_in_category", "top_10_in_category"]
    },
    "targets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["persona", "language", "location"],
        "properties": {
          "persona": { "type": "string" },
          "language": { "type": "string", "enum": ["EN", "DE", "FR", "ES", "IT", "PT"] },
          "location": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "partner_id": { "type": "string" },
    "product_id": { "type": "string" },
    "is_active": { "type": "boolean" },
    "run_schedule": { "type": "string", "enum": ["daily", "weekly", "monthly"] },
    "start_date": { "type": "string", "format": "date-time" },
    "runs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["timestamp", "manifest_id"],
        "properties": {
          "timestamp": { "type": "string", "format": "date-time" },
          "manifest_id": { "type": "string", "format": "uuid" }
        },
        "additionalProperties": false
      }
    },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" }
  },
  "additionalProperties": false
}

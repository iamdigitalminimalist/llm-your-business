# =============================================================================
# LLM Business - Centralized Environment Configuration
# =============================================================================
# This file contains all environment variables for the entire monorepo.
# Copy this to .env and fill in your actual values.

# =============================================================================
# Database Configuration
# =============================================================================
# MongoDB Atlas connection string (recommended for production)
DATABASE_URL=""

# Alternative: Local MongoDB (uncomment if using local MongoDB)
# DATABASE_URL="mongodb://admin:password@localhost:27017/llm_business?authSource=admin"

# =============================================================================
# AI/LLM API Keys
# =============================================================================
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""

# =============================================================================
# Kafka Configuration
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS="localhost:9092"
KAFKA_INPUT_TOPIC="objective.execution.question"
KAFKA_OUTPUT_TOPIC="objective.execution.answer"
KAFKA_CONSUMER_GROUP="llm-service-group"

# =============================================================================
# Service Configuration
# =============================================================================
# Environment (development, staging, production)
NODE_ENV="development"
ENVIRONMENT="development"

# Logging
LOG_LEVEL="INFO"

# LLM Service Settings
MAX_RETRIES=3
PROCESSING_TIMEOUT=300

# =============================================================================
# Port Configuration
# =============================================================================
# Client (React)
CLIENT_PORT=3000

# Server (Node.js API)
SERVER_PORT=5000

# LLM Service (Python FastAPI)
LLM_SERVICE_PORT=8000

# Kafka UI
KAFKA_UI_PORT=8080

# MongoDB (when using local instance)
MONGODB_PORT=27017

# =============================================================================
# Development Tools
# =============================================================================
# Docker Compose Profiles
# Uncomment the profile you want to use:
# COMPOSE_PROFILES=full-stack    # Start all services
# COMPOSE_PROFILES=local-db      # Include local MongoDB
# COMPOSE_PROFILES=""            # Default: Kafka + LLM Service only